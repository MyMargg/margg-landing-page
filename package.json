{
  "name": "margg-landing-page",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node --env-file=.env server.js",
    "build": "vite build && vite build --ssr src/entry-server.jsx",
    "build:client": "vite build",
    "build:server": "vite build --ssr src/entry-server.jsx",
    "start": "cross-env NODE_ENV=production node server.js",
    "lint": "eslint .",
    "deploy:stage": "cross-env VITE_APP_ENV=staging npm run build && node deploy.js",
    "deploy:uat": "cross-env VITE_APP_ENV=uat npm run build && node deploy.js",
    "deploy:prod": "cross-env VITE_APP_ENV=production npm run build && node deploy.js"
  },
  "bin": {
    "create-react-structure": "./bin/create-structure.js"
  },
  "files": [
    "src",
    "vite.config.js"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "compression": "^1.8.1",
    "express": "^5.2.1",
    "framer-motion": "^12.34.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.13.0",
    "styled-components": "^6.3.9"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.987.0",
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "cross-spawn": "^7.0.6",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "inquirer": "^13.2.2",
    "mime-types": "^3.0.2",
    "mustache": "^4.2.0",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  }
}
