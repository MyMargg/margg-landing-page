{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/dist/client/assets/$1"
    },
    {
      "src": "/(favicon\\.ico|robots\\.txt|sitemap\\.xml|og-cover\\.png|logo\\.png)",
      "dest": "/dist/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
